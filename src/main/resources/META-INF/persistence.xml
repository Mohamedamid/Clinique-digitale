<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_2.xsd"
             version="3.2">

    <persistence-unit name="cliniquePU" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <!-- entities packages or list of classes (optional) -->
        <class>com.cliniquedigitale.entity.User</class>
        <class>com.cliniquedigitale.entity.Patient</class>
        <class>com.cliniquedigitale.entity.Appointment</class>
        <class>com.cliniquedigitale.entity.Availability</class>
        <class>com.cliniquedigitale.entity.Department</class>
        <class>com.cliniquedigitale.entity.Doctor</class>
        <class>com.cliniquedigitale.entity.MedicalNote</class>
        <class>com.cliniquedigitale.entity.Specialite</class>
        <class>com.cliniquedigitale.entity.Staff</class>

        <properties>
            <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/clinique"/>
            <property name="javax.persistence.jdbc.user" value="postgres"/>
            <property name="javax.persistence.jdbc.password" value="/3042000"/>

            <!-- Hibernate properties (dev) -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
